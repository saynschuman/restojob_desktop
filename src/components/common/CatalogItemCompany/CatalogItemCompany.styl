.item
    display: flex
    flex-direction: row
    align-items: center

.logoContainer
    display: flex
    align-items: center
    justify-content: center
    width: 95px
    height: 95px
    margin-right: 24px

    img
        max-width: 100%

.content
    width: calc(100% - 120px)

.title
    display: block
    margin: 0 0 10px
    font-size: 13px
    width: 100%
    ellipsis()

.vacancy
    display: block
    margin: 0 0 7px
    text-decoration: none
    color: $color-link
    font-size: 13px
    font-weight: 400
    ellipsis()

    &:hover
        text-decoration: underline

.more
    display: block
    font-size: 11px
    text-decoration: none
    color: $color-link

    &:hover
        text-decoration: underline
