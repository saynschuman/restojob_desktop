.baseButton
    position: relative
    overflow: hidden
    border: none
    outline: none
    font-size: 12px
    font-weight: 500
    color: #fff
    text-transform: uppercase
    padding: 9px 15px
    border-radius: 3px
    cursor: pointer
    transition: background-color 0.1s

    &:active
    &:focus
        border: none
        outline: none