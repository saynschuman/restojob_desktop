.showButton
.closeButton
    position: relative
    display: inline-block
    color: $color-link
    cursor: pointer
    border: none
    outline: none
    font-size: 13px;
    padding-right: 13px

    &:focus,
    &:active
        border: none
        outline: none

.showButton
    margin-left: 14px;

    &::after
        position: absolute
        bottom: 3px
        right: 0
        content: ''
        display: block
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 7px 4px 0 4px;
        border-color: $color-link transparent transparent transparent;

.closeButton
    display: block
    margin-left: 0

    &::after
        position: absolute
        bottom: 3px
        right: 0
        content: ''
        display: block
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 4px 7px 4px;
        border-color: transparent transparent $color-link transparent;

.addressesList
    margin: 0 0 18px
    padding: 13px 0 0
    list-style none

.addressesListItem
    margin-bottom: 9px
    white-space: nowrap
    display: flex

    &.withMetro
        padding-left: 22px

.metro
    position: relative
    display: inline-block
    vertical-align: middle
    font-size: 13px
    color: $color-text
    margin-right: 10px

.metroCircle
    position: absolute
    left: -22px
    top: -1px
    display: flex
    align-items: center
    justify-content: center
    width: 15px
    height: 15px
    font-size: 9px
    border-radius: 50%
    color: #F2F2F2

.address
    display: inline-block
    vertical-align: middle
    color: #828282
    font-size: 13px
    text-overflow: ellipsis
    overflow: hidden