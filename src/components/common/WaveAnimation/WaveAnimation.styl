.container
  display: block
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

.waveEffect
  position: absolute
  display: block
  width: 1px
  height: 1px
  opacity: 1
  background: red
  border-radius: 50%
  transition: opacity 0.5s
  transform: translate3d(-50%, -50%, 0)
  animation-name: waveEffectAnimation
  animation-fill-mode: forwards
  will-change: left, top

@keyframes waveEffectAnimation
  0%
    opacity: 1
    width: 1px
    height: 1px
  100%
    opacity: 0
    width: 200vw
    height: 200vw