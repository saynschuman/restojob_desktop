.item
    display: flex
    flex-direction: row
    align-items: center
    justify-content: flex-start

.photoContainer
    width: 100px
    height: 100px
    border-radius: 50%
    overflow: hidden

.photo
    display: block
    width: 100%

.content
    width: calc(100% - 100px)
    padding: 0 0 0 15px

.name
    display: block
    color: $color-link
    font-size: 13px
    text-decoration: none
    margin: 0 0 10px
    ellipsis()

    &:hover
        text-decoration: underline

.vacancy
    display: block
    font-size: 13px
    color: $color-text
    margin: 0 0 10px
    ellipsis()

.salary
    display: block
    font-size: 18px
    font-weight: 300
    color: $color-text
    ellipsis()


@media (max-width: 1150px)
    .photoContainer
        width: 75px
        height: 75px

    .content
        width: calc(100% - 75px)