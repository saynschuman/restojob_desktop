.asideCompanyBlock
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    border: 1px solid #EBEBEB
    padding: 20px
    margin-bottom: 20px
    border-radius: 3px

.logo
    width: 100px
    margin-bottom: 11px

.title
    font-size: 13px
    font-weight: bold
    color: $color-text
    margin: 0 0 14px

.vacancies
    font-size: 11px
    font-weight: 300
    color: $color-text
    margin: 0 0 13px
    text-align: center

.link
    text-decoration: none
    color: $color-link
    font-size: 11px

    &:hover
        text-decoration: underline

