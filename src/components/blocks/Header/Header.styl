.container
    display: block
    height: 60px

.header
    position: fixed
    left: 0
    top: 0
    width: 100%
    min-width: 1024px;
    min-height: 60px
    padding: 10px 35px
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    flex-wrap: nowrap
    box-shadow: 0 3px 6px 0 rgba(0,0,0,0.08)
    background: #fff
    z-index: 5

.logoLink
    margin-right: 20px
    text-decoration: none

.logo
    display: block
    width: 210px

.city
    display: block
    color: #828282
    font-size: 11px
    margin-top: 5px

.content
    display: flex
    flex-direction: row
    align-items: center
    flex-wrap: nowrap

.link
    color: $color-text
    font-size: 14px
    font-weight: bold
    text-transform: uppercase
    text-decoration: none

    & + &
        margin-left: 35px

    &:hover
        text-decoration: underline
